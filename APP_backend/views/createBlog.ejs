<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Green Energy Hub - Create New Blog</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="createBlog.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
  <style>
    
  </style>
</head>
<body>
  <div class="top-bar">
    <div class="user-pill">
      <i class="fas fa-user"></i>
      <span><%= user.username %></span>
    </div>
  </div>

  <nav class="sidebar">
    <div class="logo">
      <h1>Green Energy Hub</h1>
    </div>
    <ul class="nav-links">
      <li><a href="/home"><i class="fas fa-home"></i><span>Home</span></a></li>
      <li><a href="#"><i class="fas fa-gamepad"></i><span>Games</span></a></li>
      <li><a href="/events"><i class="fas fa-calendar-alt"></i><span>Events</span></a></li>
      <li><a href="#"><i class="fas fa-info-circle"></i><span>About Us</span></a></li>
      <li><a href="#contacts"><i class="fas fa-envelope"></i><span>Contact</span></a></li>
      <li><a href="/query"><i class="fas fa-question-circle"></i><span>Queries</span></a></li>
    </ul>
  </nav>

  <main class="main-content">
    <div class="main-content-header">
      <h1 class="content-title">Create New Blog Post</h1>
    </div>

    <form action="/post-blog" method="POST" class="form-container">
      <div class="form-group">
        <label for="blog-title">Blog Title</label>
        <input type="text" id="blog-title" name="title" class="form-control" required>
      </div>

      <div class="form-group">
        <label for="blog-content">Content</label>
        <textarea id="blog-content" name="content" class="form-control" required></textarea>
      </div>

      <div class="form-group">
        <label>Tags</label>
        <div class="tag-input">
          <input type="text" class="form-control" id="tag-input" placeholder="Add a tag">
          <button type="button" class="btn btn-primary" onclick="addTag()">
            <i class="fas fa-plus"></i> Add
          </button>
        </div>
        <div class="tag-container" id="tags">
          <!-- Tags will be added here dynamically -->
        </div>
      </div>

      <div class="btn-container">
        <a href="/blogs" class="btn btn-primary">
          <i class="fas fa-arrow-left"></i> Back to Blogs
        </a>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-paper-plane"></i> Publish Blog
        </button>
      </div>
    </form>
  </main>

  <footer>
    <p>&copy; 2024 Green Energy Hub | Contact: (807) 256-6972</p>
  </footer>

  <script>
    function addTag() {
      const tagInput = document.getElementById('tag-input');
      const tagContainer = document.getElementById('tags');
      
      if (tagInput.value.trim() !== '') {
        const tag = document.createElement('span');
        tag.className = 'tag';
        tag.textContent = tagInput.value.trim();
        
        const hiddenInput = document.createElement('input');
        hiddenInput.type = 'hidden';
        hiddenInput.name = 'tags[]';
        hiddenInput.value = tagInput.value.trim();
        
        tagContainer.appendChild(tag);
        tagContainer.appendChild(hiddenInput);
        
        tagInput.value = '';
      }
    }
  </script>
</body>
</html>