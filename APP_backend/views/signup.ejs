<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="signup.css">
</head>
<body>
    <div class="container">
        <h1>Welcome</h1>
        <form action="/datasingnup" method="post" onsubmit="return proceed()">
            <input type="email" placeholder="Email" id="email" name="Email">
            <input type="text" placeholder="Username" id="u" name="Username">
            <input type="password" placeholder="Password" id="p1" name="password">
            <input type="password" placeholder="Retype Password" id="p2">
            <button type="submit" value="submit">Proceed</button>
        </form>
        <div class="query">
            <p>Already have an account? <a href="/login">Login</a></p>
        </div>
    </div>

    <script>
        function proceed() {
            var pp1 = document.getElementById("p1").value;
            var pp2 = document.getElementById("p2").value;
            var us = document.getElementById("u").value;
            var em = document.getElementById("email").value;

            if (us !== "" && pp1 === pp2 && pp1 !== "" && pp2 !== "" && em !== "") {
                return true;
            } else {
                alert("Please fill all fields correctly.");
                return false;
            }
        }
    </script>
</body>
</html>
